programa
{
    funcao inicio()
    {
        inteiro i, numero
        inteiro contagemPares, contagemImpares

      
        contagemPares = 0
        contagemImpares = 0

       
        para (i = 1; i <= 5; i++)
        {
            escreva("Digite o ", i, "º número: ")
            leia(numero)

            
            se (numero % 2 == 0) 
            {
                contagemPares = contagemPares + 1
            }
            senao 
            {
                contagemImpares = contagemImpares + 1
            }
        }

       
        escreva("Quantidade de números pares: ", contagemPares, "\n")
        escreva("Quantidade de números ímpares: ", contagemImpares)
    }
}
