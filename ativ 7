programa
{
    funcao inicio()
    {
        inteiro numero, i
        inteiro fatorial

     
        escreva("Digite um número inteiro para calcular o fatorial: ")
        leia(numero)

        
        fatorial = 1

       
        para (i = 1; i <= numero; i++)
        {
            fatorial = fatorial * i
        }

        
        escreva("O fatorial de ", numero, " é: ", fatorial)
    }
}
